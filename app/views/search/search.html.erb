<% if @user_or_book == "1" %>
	<h2>Users search for </h2>
	<table class="table">
		<thead>
			<tr>
				<th colspan="1"></th>
				<th>name</th>
				<th>introduce</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					</td>
					<td><%= user.name %></td>
					<td><%= user.introduction %></td>
				</tr>
			<% end %>
		</tbody>
	</table>


<% elsif @user_or_book == "2" %>
	<h2>Books search for </h2>
	<table class="table">
		<thead>
			<tr>
				<th colspan="1"></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% else %>
<% end %>